<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="http://s.mlcdn.co/animate.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <a><%= link_to "Twitter", tweets_path, method: :get, class: 'navbar-brand' %></a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li class="text-center"><a>Hello <%= current_user.name %></a></li>
        <%= link_to "All Profiles", users_profiles_path, class: 'btn btn-primary navbar-btn margin-right' %>
        <%= link_to "Profile", user_path(current_user.id), class: 'btn btn-primary navbar-btn margin-right' %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-primary navbar-btn margin-right' %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'btn btn-primary navbar-btn margin-right' %>
      <% else %>
        <%= link_to "Log In", new_user_session_path, class: 'btn btn-primary navbar-btn margin-right', method: :get %>
      <% end %>
  </div>
</nav>

<%= yield %>

</body>
</html>
